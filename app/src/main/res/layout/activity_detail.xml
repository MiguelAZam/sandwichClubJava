<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <!--Linear Layout that contains image all information-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Sandwich Image-->
        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <!--Linear Layout that contains "Also known as"
         label and information-->
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/padding_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--"Also known as" label-->
            <TextView
                android:textSize="@dimen/text_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_also_known_as_label"
                android:textStyle="bold" />

            <!--"Also known as" information-->
            <TextView
                android:id="@+id/also_known_tv"
                android:textSize="@dimen/text_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Linear Layout that contains "Place of origin"
         label and information-->
        <LinearLayout
            android:padding="@dimen/padding_linear_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--"Place of origin" label-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_tv"
                android:text="@string/detail_place_of_origin_label"
                android:textStyle="bold" />

            <!--"Place of origin" information-->
            <TextView
                android:id="@+id/origin_tv"
                android:textSize="@dimen/text_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Linear Layout that contains "Description"
         label and information-->
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/padding_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--"Description" label-->
            <TextView
                android:textSize="@dimen/text_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_description_label"
                android:textStyle="bold" />

            <!--"Description" information-->
            <TextView
                android:id="@+id/description_tv"
                android:textSize="@dimen/text_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Linear Layout that contains "Ingredients"
         label and information-->
        <LinearLayout
            android:padding="@dimen/padding_linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--"Ingredients" label-->
            <TextView
                android:textSize="@dimen/text_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_ingredients_label"
                android:textStyle="bold" />

            <!--"Ingredients" information-->
            <TextView
                android:id="@+id/ingredients_tv"
                android:textSize="@dimen/text_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

